{% extends 'layouts/main.twig' %}

{% block main %}
	<div class="container">
    <div class="row mb-5">
      <div class="col-md-6 offset-md-3">
        <h2 class="text-center text-primary text-uppercase">{{ project.post_title }}</h2>
        <hr class="my-2">
        <p class="text-right">
          pour <span class="text-primary">{{ project.client }}</span>
        </p>
      </div>
    </div>
    <div class="row mb-5">
      <div class="col-sm-6 col-md-4">
        <figure class="mt-1">
          {{ fn('wp_get_attachment_image', project.picture, 'thumbnail_project', false, {'class': 'img-fluid mb-3'})|raw }}
        </figure>
      </div>
      <div class="col-sm-6 col-md-8">
        <div class="post-content">
          <h2 class="text-primary">
            {{ project.post_title }}
          </h2>
          {{ wpautop(project.benefits)|raw }}
        </div>
      </div>
    </div>
    {% for item in project.paragraph %}
      <div class="row">
        <div class="col-lg-2 col-md-3 col-sm-4">
          <figure class="mt-1">
            {{ fn('wp_get_attachment_image', item.picture, 'thumbnail', false, {'class': 'img-fluid mb-3'})|raw }}
          </figure>
        </div>
        <div class="col-lg-10 col-md-9 col-sm-8">
          <span class="text-primary h2 font-weight-normal">{{ item.title }} ></span>
          {{ item.content }}
        </div>
      </div>
      {% if not loop.last %}
        <div class="row">
          <div class="col-sm-10">
            <hr class="mb-5">  
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
{% endblock %}