{% extends 'layouts/main.twig' %}

{% block main %}
  {% if projects %}
    <div class="container">
      {% for project in projects %}
        {% set permalink = fn('get_permalink', project.ID) %}
        {# {{ dump(project) }} #}
        <div class="row">
          <div class="col-sm-6 col-md-4">
            <a href="{{ permalink }}" class="btn btn-block btn-primary text-uppercase">
              {{ project.post_title }}
              
            </a>
            <figure class="mt-1">
              <a href="{{ permalink }}" class="d-block">
								{{ fn('wp_get_attachment_image', project.picture, 'thumbnail_project', false, {'class': 'img-fluid mb-3'})|raw }}
              </a>
            </figure>
          </div>
          <div class="col-sm-6 col-md-8">
            <h2>{{ project.client }}</h2>
            <div class="my-3">
              {{ project.summary }}
            </div>
            <div class="text-right">
              <a href="{{ permalink }}" class="btn btn-primary text-uppercase">
                Voir le mandat
              </a>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-10">
            <hr class="mb-5">  
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
    
  {% endblock %}