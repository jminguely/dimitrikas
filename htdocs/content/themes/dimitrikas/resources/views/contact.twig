{% extends 'layouts/main.twig' %}

{% block main %}
	<div class="container">
    <div class="row">
      <div class="col-sm-8 offset-sm-2 col-lg-6 offset-lg-3">
        <p class="h1 text-center pt-3 pb-4">
          <a href="tel:+41 78 943 07 05">+41 78 943 07 05</a>
          <a href="tel:+41 78 943 07 05">{{ email_address }}</a>
        </p>
         <div class="alert alert-danger" role="alert" {% if not error %}style="display:none"{% endif %}>
          <strong>Oh snap!</strong> Vérifiez votre saisie.
        </div>
        <div class="alert alert-success" role="alert" {% if not mailSent %}style="display:none"{% endif %}>
          <strong>Well done! </strong> Message envoyé avec succès.
        </div>
        <div {% if mailSent %}style="display:none"{% endif %}>
          {{ Form.open('', 'post', false, {'class': 'py-3', 'id': 'contact_form'})|raw }}
          <form action="#" class="py-3">
            <div class="form-group">
              {{ Form.textarea('message', formData.message ?: '', {'class': 'form-control required', 'placeholder': 'C’est ici qu’on engage la conversation...', 'rows': 5})|raw }} 
              <div class="input-group mt-3">
                {{ Form.text('email', formData.email ?: '', {'class': 'form-control required', 'placeholder': 'Votre adresse e-mail'})|raw }}       
                <div class="input-group-append">
                  {{ Form.submit('submit', 'Envoyer', {'class': 'btn btn-primary', 'id': 'submit_form'})|raw }}
                </div>
              </div>
            </div>
          {{ Form.close()|raw }}
        </div>
      </div>
    </div>
  </div>
{% endblock %}